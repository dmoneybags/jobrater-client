{
    "name": "ApplicantIQ",
    "version": "0.0.6",
    "description": "Get AI resume ratings and accurate job ratings for jobs on LinkedIn.",
    "permissions": [
    "storage",
    "tabs",
    "notifications"
    ],
    "host_permissions" : [
    "https://*.linkedin.com/*",
    "https://applicantiq.org/*",
    "https://*.glassdoor.com/*"
    ],
    "background": {
        "service_worker": "dist/background.bundle.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://*.linkedin.com/*", "https://applicantiq.org/*"],
            "js": [
                "dist/content.bundle.js"
            ]
        }
    ],
    "action": {
        "default_title": "ApplicantIQ",
        "default_popup": "dist/popup.html",
        "default_icon": {
          "16": "icons/logo_16.png",
          "48": "icons/logo_48.png",
          "128": "icons/logo_128.png"
        }
    },
    "icons": {
        "16": "icons/logo_16.png",
        "48": "icons/logo_48.png",
        "128": "icons/logo_128.png"
    },
  "manifest_version": 3
}
